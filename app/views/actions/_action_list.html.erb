<% actions.each do |action| %>
  <%= link_to action, class: (action.visible? ? 'action-entry' : 'action-entry hidden-action') do %>
    <div class="image">
      <%= image_tag (action.show_picture? ? action.picture_url(:action_list) : 'placeholder.svg') %>
    </div>
    <div class="info">
      <% unless action.date.nil? %>
        <div class="date"><%= l action.date, format: :date %></div>
      <% end %>
      <div class="title"><%= simple_titles ? action.title : action.full_title %></div>
    </div>
  <% end %>
<% end %>