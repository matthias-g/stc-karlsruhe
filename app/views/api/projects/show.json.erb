{
  "id": "<%= @project.id %>",
  "title": <%= json_escape @project.title.to_json.html_safe %>,
  "description": <%= json_escape @project.description.to_json.html_safe %>,
  "location": <%= json_escape @project.location.to_json.html_safe %>,
  "latitude": "<%= @project.latitude %>",
  "longitude": "<%= @project.longitude %>",
  "individual_tasks": <%= json_escape @project.individual_tasks.to_json.html_safe %>,
  "material": <%= json_escape @project.material.to_json.html_safe %>,
  "requirements": <%= json_escape @project.requirements.to_json.html_safe %>,
  <% unless @project.picture_source.blank? %>
  "picture": {
    "url": "<%= @project.picture.url %>",
    "thumb": {"url": "<%= @project.picture.thumb.url %>"},
    "listview": {"url": "<%= @project.picture.listview.url %>"},
    "preview": {"url": "<%= @project.picture.preview.url%>"}
  },
  <% end %>
  "desired_team_size": "<%= @project.desired_team_size %>",
  "status": "<%= @project.status %>",
  "time": <%= json_escape @project.time.to_json.html_safe %>,
  "short_description": <%=json_escape  @project.short_description.to_json.html_safe %>,
  "map_latitude": "<%= @project.map_latitude %>",
  "map_longitude": "<%= @project.map_longitude %>",
  "map_zoom": "<%= @project.map_zoom %>",
  "picture_source": <%= json_escape @project.picture_source.to_json.html_safe %>,
  "project_week_id": "<%= @project.project_week_id %>",
  "volunteers": "<%= @project.volunteers.collect { |volunteer| volunteer.first_name }.join(', ') %>",
  "leaders": "<%= @project.leaders.collect { |leader| leader.first_name }.join(', ') %>"
}