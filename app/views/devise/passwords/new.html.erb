<% content_for :pageTitle do %><%= t('layout.title.userPasswordReset') %><% end %>
<%= render '/layouts/smallheader' -%>

<div class="row">
  <div class="col-medium col-centered">
    <section>
      <h2><%= t('devise.passwords.forgot_your_password') %></h2>
      <%= bootstrap_form_for(resource, :as => resource_name,
              :url => password_path(resource_name),
              :html => { :method => :post }) do |f| %>
          <%#= devise_error_messages! %>
          <%= f.email_field :email, :autofocus => true %>
          <%= f.submit t('devise.passwords.send_me_reset_password_instructions') %>
          <%= render 'devise/shared/links' %>
      <% end %>
    </section>
  </div>
</div>

