<% content_for :pageTitle do %><%= t('layout.title.userRegister') %><% end %>
<%= render '/layouts/smallheader' -%>

<div class="row">
  <div class="col-medium col-centered">
    <section>
      <h2><%= t('user.label.register') %></h2>
      <%= bootstrap_form_for(resource, :as => resource_name,
                             :url => registration_path(resource_name)) do |f| %>
          <%#= devise_error_messages! %>
          <%= f.email_field :email, :autofocus => true %>
          <%= f.text_field :username %>
          <%= f.text_field :first_name %>
          <%= f.text_field :last_name %>
          <%= f.password_field :password, help: t('user.help.passwordLength') %>
          <%= f.password_field :password_confirmation %>
          <%= f.submit t('user.action.register') %>
      <% end %>
    </section>
  </div>
</div>