
<h1>Galerie√ºbersicht</h1>

<%= link_to 'New Gallery', new_gallery_path, class: 'btn btn-primary m-2' %>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Anzahl Bilder</th>
    <th>Unsichtbare Bilder</th>
    <th colspan="3"></th>
    <th>Benutzt in</th>
  </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.title %></td>
        <td><%= gallery.gallery_pictures.count %></td>
        <td><%= gallery.gallery_pictures.invisible.count %></td>
        <td><%= link_to 'Show', gallery %></td>
        <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
        <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to(gallery.owner.title + " (#{gallery.owner.model_name.human})", gallery.owner) if gallery.owner %></td>
      </tr>
    <% end %>
  </tbody>
</table>
