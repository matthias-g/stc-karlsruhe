<div class="row">
  <section class="col-md-12">

    <h1>Galerie√ºbersicht</h1>

    <table class="table">
      <thead>
      <tr>
        <th>Title</th>
        <th>Anzahl Bilder</th>
        <th colspan="3"></th>
        <th>Benutzt in</th>
      </tr>
      </thead>

      <tbody>
      <% @galleries.each do |gallery| %>
        <tr>
          <td><%= gallery.title %></td>
          <td><%= gallery.gallery_pictures.count %></td>
          <td><%= link_to 'Show', gallery %></td>
          <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
          <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% gallery.projects.each do |project| %>
            <td><%= link_to project.title, project %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Gallery', new_gallery_path %>

  </section>
</div>