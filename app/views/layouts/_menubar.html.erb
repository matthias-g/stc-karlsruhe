<div id="metaLinks">
  <%= link_to t('layout.meta_links.home'), root_path %>
  <%= link_to t('layout.meta_links.projects'), projects_path %>
</div>
<% if user_signed_in? %>
  <%= link_to current_user.full_name, user_path(current_user) %>
  <%= link_to t('user.action.logout'), destroy_user_session_path, :method => :delete %>
<% else %>
  <div class="miniPopup">
    <%= link_to t('user.action.login'), new_user_session_path %>
    <div>
      <h2>Anmelden</h2>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div><%= f.label :login %><br />
            <%= f.text_field :login, :autofocus => true %>
          </div>

          <div><%= f.label :password %><br />
            <%= f.password_field :password %>
          </div>

          <div class="loginOptions">
            <%= f.submit "Anmelden" %>
            <% if devise_mapping.rememberable? -%>
                <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
            <% end -%>
          </div>
      <% end %>
    </div>
  </div>
  <div class="miniPopup">
    <%= link_to t('user.action.register'), register_path %>
    <div>
      <h2>Registrieren</h2>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%#= devise_error_messages! %>
          <div><%= f.label :email %><br />
            <%= f.email_field :email, :autofocus => true %></div>

          <div><%= f.label :username %><br>
            <%= f.text_field :username %></div>

          <div><%= f.label :first_name %><br>
            <%= f.text_field :first_name %></div>

          <div><%= f.label :last_name %><br>
            <%= f.text_field :last_name %></div>

          <div><%= f.label :password %> <i>(Mindestens 6 Zeichen)</i><br />
            <%= f.password_field :password %></div>

          <div><%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation %></div>

          <div class="loginOptions">
            <%= f.submit "Registrieren" %>
          </div>
      <% end %>
    </div>
  </div>
<% end %>