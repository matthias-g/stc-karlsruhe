<a id="nav-button" href="#nav" title="MenÃ¼">
  <div class="fas fa-bars d-block"></div>
</a>

<nav id="nav" data-class="Navbar">
  <div id="nav-eclipse"></div>
  <div id="nav-bar">
    <div id="nav-logo">
      <%= link_to root_path do %>
        <%= image_tag('logo_int.svg', alt: 'Serve the City Karlsruhe') %>
      <% end %>
    </div>
    <ul>
      <li<%= current_page?(root_path) ? ' class=active' : '' %>>
        <%= link_to root_path do %>
          <div class="link-icon"><span class="fas fa-home"></span></div>
          <div class="link-text"><%= t('layout.navbar.home') %></div>
        <% end %>
      </li>

      <li<%= current_page?('/about') ? ' class=active' : '' %>>
        <%= link_to '/about' do %>
          <div class="link-icon"><span class="far fa-lightbulb"></span></div>
          <div class="link-text"><%= t('layout.navbar.about') %></div>
        <% end %>
      </li>

      <% default_action_group = ActionGroup.default %>
      <li<%= current_page?(show_action_group_path(default_action_group)) ? ' class=active' : '' %>>
        <%= link_to show_action_group_path(default_action_group) do %>
          <div class="link-icon"><span class="far fa-hand-point-right"></span></div>
          <div class="link-text"><%= default_action_group.title %></div>
        <% end %>
      </li>

      <% if user_signed_in? %>
        <li<%= current_page?(user_path(current_user)) ? ' class=active' : '' %>>
          <%= link_to user_path(current_user) do %>
            <div class="link-icon"><span class="fas fa-user"></span></div>
            <div class="link-text"><%= t('layout.navbar.profile') %></div>
          <% end %>
        </li>
      <%# else %>
        <% if false %>
          <li<%= current_page?(new_user_session_path) ? ' class=active' : '' %>>
            <%= link_to new_user_session_path do %>
              <div class="link-icon"><span class="fas fa-sign-in-alt"></span></div>
              <div class="link-text"><%= t('layout.navbar.login') %></div>
            <% end %>
          </li>
        <% end %>
      <% end %>

      <% if current_user&.in_orga_team? %>
        <li<%= current_page?('/admin-dashboard') ? ' class=active' : '' %>>
          <%= link_to '/admin-dashboard' do %>
            <div class="link-icon"><span class="fas fa-cogs"></span></div>
            <div class="link-text"><%= t('layout.navbar.adminDashboard') %></div>
          <% end %>
        </li>
      <% end %>

      <li<%= current_page?(contact_path) ? ' class=active' : '' %>>
        <%= link_to contact_path do %>
          <div class="link-icon"><span class="fas fa-envelope"></span></div>
          <div class="link-text"><%= t('layout.navbar.contact') %></div>
        <% end %>
      </li>
    </ul>
  </div>
</nav>
