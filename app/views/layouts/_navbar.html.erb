<nav id="nav" data-class="Navbar">
  <div id="nav-eclipse"></div>
  <div id="nav-bar">
    <div id="nav-logo">
      <%= link_to root_path do %>
        <%= image_tag("logo_int", :alt => "Serve the City Karlsruhe") %>
      <% end %>
    </div>
    <ul>
      <li<%= current_page?(root_path) ? ' class=active' : '' %>>
        <%= link_to root_path do %>
          <span class="glyphicon glyphicon-home"></span>
          <%= t('layout.links.home') %>
        <% end %>
      </li>

      <li<%= current_page?('/about') ? ' class=active' : '' %>>
        <%= link_to '/about' do %>
            <span class="glyphicon glyphicon-grain"></span>
            <%= t('layout.links.about') %>
        <% end %>
      </li>

      <li<%= current_page?(show_action_group_path(ActionGroup.default.title)) ? ' class=active' : '' %>>
        <%= link_to show_action_group_path(ActionGroup.default.title) do %>
            <span class="glyphicon glyphicon-hand-right"></span>
            <%= t('layout.links.actions') %>
        <% end %>
      </li>

      <% if user_signed_in? %>
        <li<%= current_page?(user_path(current_user)) ? ' class=active' : '' %>>
          <%= link_to user_path(current_user) do %>
            <span class="glyphicon glyphicon-user"></span>
            <%= t('layout.links.profile') %>
            <%#= current_user.full_name %>
          <% end %>
        </li>
      <% else %>
        <li<%= current_page?(new_user_session_path) ? ' class=active' : '' %>>
          <%= link_to new_user_session_path do %>
            <span class="glyphicon glyphicon-log-in"></span>
            <%= t('layout.links.login') %>
          <% end %>
        </li>
      <% end %>

      <% if user_signed_in? && current_user.coordinator? %>
        <li<%= current_page?('/admin-dashboard') ? ' class=active' : '' %>>
          <%= link_to '/admin-dashboard' do %>
            <span class="glyphicon glyphicon-dashboard"></span>
            <%= t('layout.links.adminDashboard') %>
          <% end %>
        </li>
      <% end %>

      <li<%= current_page?(contact_path) ? ' class=active' : '' %>>
        <%= link_to contact_path do %>
            <span class="glyphicon glyphicon-envelope"></span>
            <%= t('layout.links.contact') %>
        <% end %>
      </li>
    </ul>
  </div>
</nav>