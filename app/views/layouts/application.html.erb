<!DOCTYPE html>
<html>
<head>
  <title><%= t('layout.title') %></title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false" %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>

<div id="menubar">
  <%= render '/layouts/menubar' -%>
</div>

<div id="messages">
  <% if not resource.errors.empty? %>
      <% resource.errors.full_messages.each do |error| %>
          <div class="alert-devise"><%= error %></div>
      <% end %>
  <% end %>
  <% flash.each do |key, value| %>
      <div class="alert-<%= key %>"><%= value %></div>
  <% end %>
</div>

<%= yield :pageHeader %>

<div id="content">
  <%= yield %>
</div>

<footer>
  <%= render '/layouts/footer' -%>
</footer>
</body>
</html>
