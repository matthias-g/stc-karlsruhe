<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
  <%= render '/refinery/head' %>
  <body>
    <%= render '/refinery/ie6check' if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>
    <%= render '/refinery/mainmenu' %>
    <div id="boundary">
      <div id="skyline"></div>
      <div id="pagebox">
        <a id="logo" href="/"></a>
        <div id="header">
          <%= raw @page.content_for(:headsection) %>
        </div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <div id="content">
          <%= yield %>
        </div>
        <br style="clear: both;">
      </div>
      <div id="footer">
        <%= render '/refinery/footer' -%>
      </div>
    </div>
    <%= render '/refinery/javascripts' %>
  </body>
</html>
