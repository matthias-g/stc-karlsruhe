<!DOCTYPE html>
<html>
<head>
  <title><%= t('layout.title') %></title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false" %>

  <% piwik_tracking_tag %>
  <!-- Piwik -->
  <script type="text/javascript">
    var _paq = _paq || [];
    _paq.push(["trackPageView"]);
    _paq.push(["enableLinkTracking"]);

    (function() {
      var u=(("https:" == document.location.protocol) ? "http" : "http") + "://piwik.servethecity-karlsruhe.de/";
      _paq.push(["setTrackerUrl", u+"piwik.php"]);
      _paq.push(["setSiteId", "1"]);
      var d=document, g=d.createElement("script"), s=d.getElementsByTagName("script")[0]; g.type="text/javascript";
      g.defer=true; g.async=true; g.src=u+"piwik.js"; s.parentNode.insertBefore(g,s);
    })();
  </script>
  <!-- End Piwik Code -->

</head>
<body>

<div id="menubar">
  <% if user_signed_in? %>
      <%= t('user.message.loggedInAs') + current_user.username %>
      <%= link_to t('user.action.logout'), destroy_user_session_path, :method => :delete %>
  <% else %>
      <%= link_to t('user.action.login'), new_user_session_path %>
  <% end %>
  <%= link_to t('user.action.register'), register_path %>
</div>

<%= yield :pageHeader %>

<div id="content">
  <% if notice %>
      <div id="notice"><%= notice %></div>
  <% end %>
  <%= yield %>
</div>

<footer>
  <%= render '/layouts/footer' -%>
</footer>
</body>
</html>
