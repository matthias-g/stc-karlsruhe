<section class="contact-form">
  <%= bootstrap_form_for @message do |form| %>


    <div class="row">
      <div class="col-sm-6">
        <%= form.select :content_type, content_type_options, tabindex: 1 %>
      </div>
      <div class="col-sm-6">
        <%= form.select :from, from_options, tabindex: 2 %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= form.select :recipient, recipient_options, tabindex: 3 %>
      </div>
      <div class="col-sm-6">
        <%= form.collection_select(:action_group_id, ActionGroup.all.order(title: :desc), :id, :title,
                                   selected: @message.action_group&.id, tabindex: 4,
                                   label: t('activerecord.attributes.orga_message.action_group')) %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= form.text_field :subject, tabindex: 5 %>
      </div>
    </div>

    <%= form.label OrgaMessage.human_attribute_name('body') %>
    <%= form.trix_editor :body, class: 'admin-mail-body', tabindex: 6 %>
    <div class="mt-3">
      <%= form.submit t('general.button.save'), class: 'btn-primary btn', tabindex: 11 %>
      <%= link_to t('general.button.cancel'), orga_messages_path, class: 'btn-link btn', tabindex: 12 %>
    </div>
  <% end %>
</section>