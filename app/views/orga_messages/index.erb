
<h1><%= OrgaMessage.model_name.human(count: 2) %></h1>

<div class="my-3">
  <%= link_to t('orga_message.button.write_new'), new_orga_message_path, class: 'btn-secondary btn' %>
</div>

<table class="table table-striped table-responsive">
  <thead>
  <tr>
    <th><%= OrgaMessage.human_attribute_name('created_at') %></th>
    <th><%= OrgaMessage.human_attribute_name('subject') %></th>
    <th><%= OrgaMessage.human_attribute_name('recipient') %></th>
    <th><%= OrgaMessage.human_attribute_name('sent_at') %></th>
  </tr>
  </thead>

  <tbody>
  <% @messages.each do |message| %>
    <tr>
      <td><%= l message.created_at.localtime, format: :short_with_year %></td>
      <td><%= message.subject %></td>
      <td><%= render_recipient_group(message) %></td>
      <td><%= message.sent? ? l(message.sent_at.localtime, format: :short_with_year) : '-' %></td>
      <td>
        <%= link_to t('general.button.show'), orga_message_path(message), class: 'btn-secondary btn' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
