<div class="row">
  <section class="col-md-12">

    <h1>Orgamails</h1>

    <table class="table">
      <thead>
      <tr>
        <th>Erstellt</th>
        <th>Betreff</th>
        <th>Empf√§nger</th>
        <th>Versandt</th>
      </tr>
      </thead>

      <tbody>
      <% @messages.each do |message| %>
              <tr>
                <td><%= l message.created_at, format: :short %></td>
                <td><%= message.subject %></td>
                <td><%= message.sent? ? message.recipient : render_recipient_group(message.recipient, current_user) %></td>
                <td><%= message.sent? ? l(message.sent_at, format: :short) : '-' %></td>
                <td>
                  <%= link_to t('general.action.show'), orga_message_path(message), class: 'btn-default btn' %>
                </td>
              </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to t('orga_message.action.write_new'), new_orga_message_path, class: 'btn-default btn' %>

  </section>
</div>