<%= form_for(@page_section) do |f| %>
  <% if @page_section.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('section.message.errorList') %></h2>
      <ul>
      <% @page_section.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </div>
  <div class="field">
    <%= f.label :css_class %><br>
    <%= f.text_field :css_class %>
  </div>
  <div class="actions">
    <%= f.submit t('section.action.save') %>
  </div>
<% end %>
