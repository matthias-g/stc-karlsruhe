<%= render '/layouts/smallheader' -%>

<section>
  <h1><%= t('section.label.list') %></h1>

  <table>
    <thead>
    <tr>
      <th><%= t('section.label.title') %></th>
      <th><%= t('section.label.content') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @page_sections.each do |page_section| %>
        <tr>
          <td><%= page_section.title %></td>
          <td><%= page_section.content %></td>
          <td><%= link_to t('section.action.show'), page_section %></td>
          <td><%= link_to t('section.action.edit'), edit_page_section_path(page_section) %></td>
          <td><%= link_to t('section.action.delete'), page_section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('section.action.new'), new_page_section_path %> |
  <%= link_to t('page.action.maintain'), pages_path %>
</section>


