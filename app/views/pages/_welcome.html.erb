<section class="restyled">
  <a id="project-link" href="/projects" style="text-align:center">
    &rarr; zu den Projekten der Aktionswoche 2014</a>
</section>

<section class="project-map">
  <h1>Aktuelle Projekte</h1>
  <div class="map"
       data-lon="8.403869"
       data-lat="49.011627"
       data-zoom="12">
    <% Project.all.each do |project| %>
        <% if (project.longitude != 0) %>
            <div data-lon="<%= project.longitude %>"
                 data-lat="<%= project.latitude %>"
                 data-name="<%= project.title %>"
                 data-href="<%= url_for(project) %>">
              <% if project.short_description.empty? %>
                  <%= simple_format project.description %>
              <% else %>
                  <%= simple_format project.short_description %>
              <% end %>
            </div>
        <% end %>
    <% end %>
  </div>
</section>

