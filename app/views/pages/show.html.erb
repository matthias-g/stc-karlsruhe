<%= render '/layouts/' + @page.header_name -%>


<section>
  <h1><%= @page.title %></h1>
</section>

<% @page.sections.order(index: :asc).each do |section| %>
    <section <%= ('class="' + section.css_class + '"') if section.css_class %> >
      <% unless section.partial_name.empty? %>
        <%= render section.partial_name %>
      <% else %>
        <%= section.content.html_safe %>
      <% end %>
    </section>
<% end %>

<section>
    <h2><%= t('general.label.adminPanel') %></h2>
    <%= link_to t('page.action.edit'), edit_page_path(@page) %><br>
    <%= link_to t('page.action.toOverview'), pages_path %>
</section>