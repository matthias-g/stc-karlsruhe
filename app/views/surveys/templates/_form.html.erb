<%= bootstrap_form_for(@template) do |f| %>

<% if @template.errors.any? %>
  <section id="error_explanation">
    <h2><%= t('surveys.message.errorList') %></h2>
    <ul>
      <% @template.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
  </section>
<% end %>

<div class="record-header">
  <div class="type">
    &nbsp;<%= isNew ? t('surveys.label.newTemplate') : t('surveys.label.editTemplate') %>&nbsp;
  </div>
  <h1><%= @template.title %></h1>
</div>


<section>
  <%= f.text_field :title %>
  <%= f.check_box :show_in_user_profile %>
</section>

<div class="questions" data-class="DynamicFormList">
  <div class="prototype d-none">
    <% new_object = f.object.class.reflect_on_association(:questions).klass.new %>
    <%= f.fields_for(:questions, new_object, child_index: :new_item) do |builder|
      render('question_fields', f: builder)
    end %>
  </div>
  <%= f.fields_for :questions do |builder| %>
    <%= render 'question_fields', f: builder %>
  <% end %>
  <%= link_to t('surveys.action.addQuestion'), 'javascript:void(0);', class: 'add-link btn btn-secondary' %>
</div>

<section>
  <%= f.submit t('surveys.action.saveTemplate') %>
  <%= link_to t('surveys.action.toTemplateOverview'), surveys_templates_path, class: 'btn btn-secondary' %>
  <% if !isNew %>
    <%= link_to t('surveys.action.deleteTemplate'), surveys_template_path(@template), method: :delete,
                data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary' %>
  <% end %>
</section>

<% end %>