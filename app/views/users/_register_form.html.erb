<h2><%= t('user.label.register') %></h2>

<%= bootstrap_form_for(resource, as: resource_name, namespace: 'page_reg', url: registration_path(resource_name)) do |f| %>

    <%#= devise_error_messages! %>

    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <%= f.email_field :email %>
    <%= f.password_field :password, help: t('user.help.passwordLength') %>

    <%= f.form_group do %>
      <%= recaptcha_tags ajax: true, script: false %>
    <% end %>

    <%= button_tag class: 'btn btn-primary' do %>
      <span class="fa fa-sign-up"></span><%= t('user.action.register') %>
    <% end %>
<% end %>