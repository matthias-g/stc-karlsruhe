<% content_for :pageTitle do %>
    <%= t('layout.title.userProfileEdit', user:@user.full_name) %>
<% end %>

<%= devise_error_messages! %>

<%= bootstrap_form_for(@user) do |f| %>

    <div id="user-edit-view">
      <section>
        <div class="typeHeader">
          Profil bearbeiten
        </div>
        <h1><%= @user.full_name %></h1>
      </section>

      <div class="row row-sm-eq-height">
        <section class="col-sm-6">
          <h2>Daten</h2>
          <%= f.text_field :username %>
          <%= f.text_field :first_name %>
          <%= f.text_field :last_name %>
          <%= f.text_field :email %>
          <%= f.text_field :phone %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <br />
          <%= f.submit t('general.action.save') %>
          <%= link_to t('general.action.cancel'), user_path(@user), class:'btn btn-default' %>
        </section>
        <section class="col-sm-6">
          <h2>Profilbild</h2>
          <p>...coming soon<br><br></p>

          <h2>Weitere Aktionen</h2>
          <%= link_to t('user.action.changePassword'), edit_user_registration_path,
                      class:'btn btn-default btn-wide' %>
          <%= link_to t('user.action.deleteAccount'), registration_path(resource_name),
                :data => { :confirm => t('user.message.confirmDelete') },
                :method => :delete, class:'btn btn-default btn-wide' %>
        </section>
      </div>
    </div>

<% end %>