<% provide :title, @user.full_name %>
<% wrapper_set 'container-medium' %>
<% own_profile = (@user == current_user) %>

<div class="white-box record-header">
  <div class="type"><%=  t('user.label.' + (own_profile ? 'myProfile' : 'profile')) %></div>
  <h1 class="align-center"><%= @user.full_name %></h1>
</div>

<div class="row align-items-stretch">
  <div class="col-sm-5">

    <% if own_profile && @submission %>
        <section id="survey" class="white-box">
          <h2>Umfrage</h2>
          <%= bootstrap_form_for([@submission.template, @submission]) do |f| %>
              <%= render '/surveys/submissions/form_questions', f: f %>
              <%= f.submit t('surveys.action.saveSubmission'), class:'submit btn btn-secondary float-right' %>
          <% end %>
        </section>
    <% end %>

    <% if own_profile || current_user.in_orga_team? %>
        <section id="user-profile-data" class="white-box">
          <h2><%= t('user.label.userData') %></h2>
          <table class="table properties">
            <tr>
              <td><%= t('activerecord.attributes.user.username') %></td>
              <td><%= @user.username %></td>
            </tr>
            <tr>
              <td><%= t('activerecord.attributes.user.email') %></td>
              <td><%= @user.email %></td>
            </tr>
            <tr>
              <td><%= t('activerecord.attributes.user.phone') %></td>
              <td><%= @user.phone %></td>
            </tr>
          </table>
          <span><%= email_reception_description @user %></span>

          <div class="row mt-5">
            <div class="col">
              <% if policy(@user).edit?  %>
                <%= link_to edit_user_path, title: t('user.action.edit'), class:'btn btn-primary btn-block' do %>
                  <span class="fas fa-pencil-alt"></span>
                  <%= t('user.action.edit') %>
                <% end %>
              <% end %>
            </div>
            <div class="col">
              <%= link_to destroy_user_session_path, method: :delete, title: t('user.action.logout'), class:'btn btn-secondary btn-block' do %>
                <span class="fas fa-sign-out-alt"></span>
                <%= t('user.action.logout') %>
              <% end %>
            </div>
          </div>

        </section>
    <% end %>

    <% unless own_profile  %>
        <section id="contact-user-form" class="white-box">
          <h2><%= t('contact.user.title', recipient: @user.first_name) %></h2>
          <%= bootstrap_form_for @message, url: { action: 'contact_user' } do |f| %>
              <%= f.text_field :subject, label: t('contact.general.placeholders.subject') %>
              <%= f.text_area :body, label: t('contact.general.placeholders.body') %>
              <%= f.submit t('contact.user.submit') %>
          <% end %>
        </section>
    <% end %>

  </div>
  <div class="col-sm-7">

    <section class="white-box">
      <h2><%= Participation.model_name.human(count: 2) %></h2>
      <% past_events = @user.events_as_volunteer.finished %>
      <% actions_as_leader = @user.actions_as_leader %>
      <% events_as_volunteer = @user.events_as_volunteer.upcoming %>

      <% if events_as_volunteer.any? %>
        <% events_as_volunteer.each do |event| %>
          <%= render '/actions/action_entry', event: event %>
        <% end %>
      <% end %>

      <% if actions_as_leader.any? %>
        <h3 class="mt-3"><%= t('user.label.actionsAsLeader') %></h3>
        <% actions_as_leader.each do |action| %>
          <%= render '/actions/action_entry', action: action %>
        <% end %>
      <% end %>

      <% if past_events.any? %>
        <h3 class="mt-3"><%= t('user.label.pastActions') %></h3>
        <% past_events.sort_by {|e| e.date}.each do |event| %>
          <%= render '/actions/action_entry', event: event, show_occupancy: false %>
        <% end %>
      <% end %>

      <% if @user.actions_as_volunteer.blank? && @user.actions_as_leader.blank? %>
        <%= own_profile ? t('user.message.youHaveNoActions') : t('user.message.hasNoActions', user: @user.first_name) %>
      <% end %>

      <% if own_profile  %>
        <%= link_to user_ical_path(@user.ical_token, @user),
                    data: { turbolinks: false }, class: 'btn btn-primary mt-4' do %>
          <span class="far fa-calendar-alt"></span>
          <%= t('user.action.exportICal') %>
        <% end %>
      <% end %>

    </section>

  </div>
</div>