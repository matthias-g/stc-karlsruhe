<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(day) -%>">
  <span class='title'>
    <%= day.title %>

  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_projects_admin_day_path(day),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.projects_admin_day_path(day),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => day.title),
        :method => :delete %>
  </span>
</li>
