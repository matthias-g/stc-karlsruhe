<%= form_for [refinery, :projects_admin, @day] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @day,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.projects.admin.projects.day'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @day.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
