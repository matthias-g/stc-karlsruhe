<ul>
  <% if ::Refinery::Projects::Admin::ProjectsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.projects_admin_projects_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_projects_admin_project_path,
                :class => "add_icon" %>
  </li>
  <% if !searching? && ::Refinery::Projects::Admin::ProjectsController.sortable? && ::Refinery::Projects::Project.any? %>
    <li>
      <%= link_to t('.reorder', :what => "Projects"),
                  refinery.projects_admin_projects_path,
                  :id => "reorder_action",
                  :class => "reorder_icon" %>

      <%= link_to t('.reorder_done', :what => "Projects"),
                  refinery.projects_admin_projects_path,
                  :id => "reorder_action_done",
                  :style => "display: none;",
                  :class => "reorder_icon" %>
    </li>
    <li>
      <%= link_to 'Projekttypen anzeigen', refinery.projects_admin_types_path %>
    </li>
    <li>
      <%= link_to 'Projekttage anzeigen', refinery.projects_admin_days_path %>
    </li>
    <li>
      <%= link_to 'Projektbereiche anzeigen', refinery.projects_admin_sectors_path %>
    </li>
    <li>
      <%= link_to 'Freiwilligentypen anzeigen', refinery.projects_admin_volunteer_types_path %>
    </li>
    <li>
      <%= link_to 'Projektorte anzeigen', refinery.projects_admin_locations_path %>
    </li>
  <% end %>
</ul>
