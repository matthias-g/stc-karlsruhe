<% @projects.each do |project| %>
  <div class="xpl-teaser">
    <%= link_to "<h3>#{project.title}</h3>".html_safe, refinery.projects_project_path(project), :target => '_top', :title => 'zur Projektseite' %>
    <%= image_fu project.image, '100x100>' %>
    <div><%= project.description.html_safe %></div>
  </div>
<% end %>
