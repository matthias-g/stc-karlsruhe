<% content_for :headsection do %>
   <h1><%= 'Projekt: ' + @project.title %></h1>
<% end %>
<div id="content">
  <div class="section nopadding" id="project">
    <div class="prj-leftcol">
      <div>
        <% if missing_volunteer_count > 0 %>
          <div class="box green lefttilt" style="margin:0 auto; float:none; text-align: center">
            Noch <%= missing_volunteer_count %> Plätze
          </div>
        <% else %>
          <div class="box purple lefttilt" style="margin:0 auto; float:none; text-align: center">
            Vollbesetzt
          </div>
        <% end %>
      </div>
      <div>
        <h4>Projektleitung</h4>
        <% @project.leaders.each do |leader| %>
        <%= leader.username %>
        <% end %>
      </div>
      <div>
        <h4>Projekttyp</h4>
        <% @project.types.each do |type| %>
          <%= type.title %>
        <% end %>
      </div>
      <div>
        <h4>Geeignet für</h4>
        <% @project.volunteer_types.each do |volunteer_type| %>
          <%= volunteer_type.title %>
        <% end %>
      </div>
      <div>
        <h4>Bereich</h4>
        <% @project.sectors.each do |sector| %>
          <%= sector.title %>
        <% end %>
      </div>
      <div>
        <h4>Projekttage</h4>
        <% @project.days.each do |day| %>
          <%= day.title %>
        <% end %>
      </div>
      <div>
        <h4>Einsatzort</h4>
        <% @project.locations.each do |location| %>
          <%= location.title %>
        <% end %>
      </div>
      <br style="clear: both">
    </div>
    <div class="prj-rightcol">
      <div class="prj-imagebox">
        <%= image_fu @project.image, '300x400>' %>
      </div>
      <div class="prj-imagebox">
        <img src="http://maps.googleapis.com/maps/api/staticmap?zoom=14&size=300x200&maptype=roadmap
&markers=color:red%7C49.010,8.415&sensor=false&style=feature:poi|element:labels|visibility:off&style=feature:transit|visibility:off&style=feature:road|element:labels.icon|visibility:off" />
      </div>
    </div>
    <div class="prj-maincol">
      <div>
        <%= @project.description.html_safe %>
      </div>
<%#      <div>
        <h4>Einzelne Arbeiten</h4>
        Hauptsächlich Holzbearbeitung mit Stecheisen und Beitel.
      </div>
      <div>
        <h4>Voraussetzungen</h4>
        Motivation/ mit Werkzeug umgehen können.
      </div>
      <div>
        <h4>Material</h4>
        Stecheisen in verschiedenen Größen, Holzhämmer.
      </div>
      <div>
        <h4>Spendenbedarf</h4>
        100 - 150€ / Gespendetes Geld kommt ausschließlich der pädagogischen Arbeit der Farm zu gute.
      </div>
%>

    </div>
    <br style="clear:both">
  </div>
  <%#   Hier ist Platz für Kommentare...
  <div class="section" id="comments">
    <h1>Kommentare zum Projekt</h1>
  </div>
      %>
</div>

<% content_for :body do %>
    <section>
      <% if @project.has_volunteer?(current_refinery_user) %>
        <p>
          Du nimmst an diesem Projekt teil.
          <%= link_to 'Teilnahme beenden', refinery.leave_projects_project_path(@project) %>
        </p>
      <% else %>
        <%= link_to 'Teilnehmen', refinery.enter_projects_project_path(@project) %>
      <% end %>
      <% if current_refinery_user && current_refinery_user.leads_project?(@project) %>
          <p>
            Du bist Leiter dieses Projekts.
            <%= link_to 'Projekt bearbeiten', refinery.edit_projects_project_path(@project) %>
          </p>
      <% end %>
    </section>
<% end %>

