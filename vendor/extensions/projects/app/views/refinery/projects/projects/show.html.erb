<% content_for :body_content_title do %>
  <%= @project.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @project.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @project.description %>
    </p>
  </section>
  <section>
    <h1>Start</h1>
    <p>
      <%=raw @project.start %>
    </p>
  </section>
  <section>
    <h1>End</h1>
    <p>
      <%=raw @project.end %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @project.image, nil %>
    </p>
  </section>
    <section>
      <% if @project.has_volunteer?(current_refinery_user) %>
        <p>
          Du nimmst an diesem Projekt teil.
          <%= link_to 'Teilnahme beenden', refinery.leave_projects_project_path(@project) %>
        </p>
      <% else %>
        <%= link_to 'Teilnehmen', refinery.enter_projects_project_path(@project) %>
      <% end %>
    </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="projects">
      <% @projects.each do |project| %>
        <li>
          <%= link_to project.title, refinery.projects_project_path(project) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
